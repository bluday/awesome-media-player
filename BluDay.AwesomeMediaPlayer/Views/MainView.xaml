<?xml version="1.0" encoding="utf-8"?>
<UserControl d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel}"
             mc:Ignorable="d"
             x:Class="BluDay.AwesomeMediaPlayer.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:awesomeControls="using:BluDay.AwesomeMediaPlayer.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:toolkit="using:CommunityToolkit.WinUI"
             xmlns:toolkitControls="using:CommunityToolkit.WinUI.Controls"
             xmlns:viewModels="using:BluDay.AwesomeMediaPlayer.ViewModels"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu bar -->
        <awesomeControls:MenuBar OpenAboutWindowCommand="{Binding OpenAboutWindowCommand}"
                                 OpenHelpWindowCommand="{Binding OpenHelpWindowCommand}"/>
        
        <!-- Navigation view header bar -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Selected navigation view title -->
            <TextBlock Padding="16,8"
                       Style="{ThemeResource NavigationViewItemHeaderTextStyle}"
                       Text="My Music"
                       VerticalAlignment="Center"/>

            <Grid HorizontalAlignment="Right" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="4"/>
                </Grid.ColumnDefinitions>

                <!-- List layout button -->
                <Button Height="25" Padding="0" VerticalAlignment="Center" Width="25">
                    <Viewbox Height="17" Width="17">
                        <FontIcon Glyph="&#xe9a4;"/>
                    </Viewbox>
                </Button>

                <!-- Search box -->
                <AutoSuggestBox x:Uid="MainView/NavigationViewHeaderBar/AutoSuggestBox"
                                MinWidth="200"
                                VerticalAlignment="Center"
                                Grid.Column="2"/>
            </Grid>
        </Grid>

        <!-- Navigation view -->
        <NavigationView x:Name="NavigationView"
                        PaneDisplayMode="Left"
                        OpenPaneLength="200"
                        IsBackButtonVisible="Collapsed"
                        IsPaneToggleButtonVisible="False"
                        IsSettingsVisible="False"
                        Grid.Row="2">
            <NavigationView.MenuItems>
                <NavigationViewItem x:Uid="MainView/NavigationView/PlaylistItem" IsSelected="True">
                    <NavigationViewItem.Icon>
                        <FontIcon Foreground="{ThemeResource DefaultVlcOrangeColor}" Glyph="&#xe90b;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem x:Uid="MainView/NavigationView/MediaLibraryItem" IsEnabled="False">
                    <NavigationViewItem.Icon>
                        <FontIcon Foreground="{ThemeResource DefaultVlcOrangeColor}" Glyph="&#xe8f1;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem x:Uid="MainView/NavigationView/MyComputerItem"
                                    IsExpanded="True"
                                    SelectsOnInvoked="False">
                    <NavigationViewItem.MenuItems>
                        <NavigationViewItem x:Uid="MainView/NavigationView/MyMusicItem">
                            <NavigationViewItem.Icon>
                                <FontIcon Foreground="{ThemeResource DefaultVlcOrangeColor}" Glyph="&#xe8d6;"/>
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>

                        <NavigationViewItem x:Uid="MainView/NavigationView/MyVideosItem" IsEnabled="False">
                            <NavigationViewItem.Icon>
                                <FontIcon Foreground="{ThemeResource DefaultVlcOrangeColor}" Glyph="&#xe8b2;"/>
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>

                        <NavigationViewItem x:Uid="MainView/NavigationView/MyPicturesItem" IsEnabled="False">
                            <NavigationViewItem.Icon>
                                <FontIcon Foreground="{ThemeResource DefaultVlcOrangeColor}" Glyph="&#xe8b9;"/>
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>
                    </NavigationViewItem.MenuItems>
                </NavigationViewItem>

                <NavigationViewItem x:Uid="MainView/NavigationView/DevicesItem"
                                    IsExpanded="True"
                                    SelectsOnInvoked="False">
                    <NavigationViewItem.MenuItems>
                        <NavigationViewItem x:Uid="MainView/NavigationView/DiscsItem" IsEnabled="False">
                            <NavigationViewItem.Icon>
                                <FontIcon Foreground="{ThemeResource DefaultVlcOrangeColor}" Glyph="&#xe958;"/>
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>
                    </NavigationViewItem.MenuItems>
                </NavigationViewItem>

                <NavigationViewItem x:Uid="MainView/NavigationView/LocalNetworkItem"
                                    IsExpanded="True"
                                    SelectsOnInvoked="False">
                    <NavigationViewItem.MenuItems>
                        <NavigationViewItem Content="mDNS Network Discovery" IsEnabled="False">
                            <NavigationViewItem.Icon>
                                <FontIcon Foreground="{ThemeResource DefaultVlcOrangeColor}" Glyph="&#xe968;"/>
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>

                        <NavigationViewItem Content="Network streams (SAP)" IsEnabled="False">
                            <NavigationViewItem.Icon>
                                <FontIcon Foreground="{ThemeResource DefaultVlcOrangeColor}" Glyph="&#xe968;"/>
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>

                        <NavigationViewItem Content="Universal Plug'n'Play" IsEnabled="False">
                            <NavigationViewItem.Icon>
                                <FontIcon Foreground="{ThemeResource DefaultVlcOrangeColor}" Glyph="&#xe968;"/>
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>
                    </NavigationViewItem.MenuItems>
                </NavigationViewItem>

                <NavigationViewItem x:Uid="MainView/NavigationView/InternetItem"
                                    IsExpanded="True"
                                    SelectsOnInvoked="False">
                    <NavigationViewItem.MenuItems>
                        <NavigationViewItem Content="Podcasts" IsEnabled="False">
                            <NavigationViewItem.Icon>
                                <FontIcon Foreground="{ThemeResource DefaultVlcOrangeColor}" Glyph="&#xe704;"/>
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>

                        <NavigationViewItem Content="Jamendo Selections" IsEnabled="False">
                            <NavigationViewItem.Icon>
                                <FontIcon Foreground="{ThemeResource DefaultVlcOrangeColor}" Glyph="&#xe704;"/>
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>

                        <NavigationViewItem Content="Icecast Radio Directory" IsEnabled="False">
                            <NavigationViewItem.Icon>
                                <FontIcon Foreground="{ThemeResource DefaultVlcOrangeColor}" Glyph="&#xe704;"/>
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>
                    </NavigationViewItem.MenuItems>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <NavigationView.FooterMenuItems>
                <NavigationViewItem>
                    <NavigationViewItem.Template>
                        <ControlTemplate>
                            <ContentPresenter/>
                        </ControlTemplate>
                    </NavigationViewItem.Template>

                    <Grid BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                          BorderThickness="1"
                          CornerRadius="8"
                          Height="128"
                          HorizontalAlignment="Center"
                          Margin="4"
                          VerticalAlignment="Center"
                          Width="128">
                        <Grid.Background>
                            <ImageBrush ImageSource="https://www.halopedia.org/images/2/2e/Halo2-Volume1-OriginalSoundtrack.jpg"/>
                        </Grid.Background>

                        <interactivity:Interaction.Behaviors>
                            <interactivity:BehaviorCollection>
                                <interactivity:EventTriggerBehavior EventName="PointerPressed">
                                    <interactivity:InvokeCommandAction Command="{Binding ShowCurrentMediaInformationWindowCommand}"/>
                                </interactivity:EventTriggerBehavior>
                            </interactivity:BehaviorCollection>
                        </interactivity:Interaction.Behaviors>
                    </Grid>
                </NavigationViewItem>
            </NavigationView.FooterMenuItems>

            <Grid>
                <ContentControl x:Name="ViewContentControl"
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Stretch">
                    <ContentControl.Transitions>
                        <TransitionCollection>
                            <NavigationThemeTransition/>
                        </TransitionCollection>
                    </ContentControl.Transitions>
                </ContentControl>
                
                <toolkitControls:PropertySizer Binding="{x:Bind NavigationView.OpenPaneLength, Mode=TwoWay}"
                                               HorizontalAlignment="Left"
                                               Maximum="400"
                                               Minimum="200"/>
            </Grid>
        </NavigationView>

        <!-- Media control bar -->
        <Grid BorderBrush="{ThemeResource ControlElevationBorderBrush}"
              BorderThickness="0,1,0,0"
              Grid.Row="3">
            <awesomeControls:MediaControlBar/>
        </Grid>
    </Grid>
</UserControl>