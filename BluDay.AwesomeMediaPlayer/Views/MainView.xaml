<?xml version="1.0" encoding="utf-8"?>
<UserControl d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel}"
             mc:Ignorable="d"
             x:Class="BluDay.AwesomeMediaPlayer.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:controls="using:BluDay.AwesomeMediaPlayer.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:toolkit="using:CommunityToolkit.WinUI"
             xmlns:viewModels="using:BluDay.AwesomeMediaPlayer.ViewModels"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <MenuBar>
            <MenuBarItem Title="Media">
                <MenuFlyoutItem Icon="{toolkit:FontIcon Glyph=&#xe8e5;}"
                                Text="Open File...">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="O"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutItem Text="Open Multiple Files...">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control,Shift" Key="O"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutItem Icon="{toolkit:FontIcon Glyph=&#xf12b;}"
                                Text="Open Folder...">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="F"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutItem Icon="{toolkit:FontIcon Glyph=&#xe958;}"
                                Text="Open Disc...">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="D"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutItem Icon="{toolkit:FontIcon Glyph=&#xe968;}"
                                Text="Open Network Stream...">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="N"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutItem Icon="{toolkit:FontIcon Glyph=&#xf211;}"
                                Text="Open Capture Device...">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="C"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutItem Text="Open Location from clipboard">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="V"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutSubItem Icon="{toolkit:FontIcon Glyph=&#xe823;}"
                                   Text="Open Recent Media">
                    <MenuFlyoutItem Text="file_0.mp3"/>
                </MenuFlyoutSubItem>
                
                <MenuFlyoutSeparator/>

                <MenuFlyoutItem Text="Save Playlist to File...">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="Y"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutItem Text="Convert / Save...">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="R"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutItem Icon="{toolkit:FontIcon Glyph=&#xe93e;}"
                                Text="Stream...">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="S"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutSeparator/>
                
                <MenuFlyoutItem Text="Quit at the end of playlist"/>

                <MenuFlyoutItem Icon="{toolkit:FontIcon Glyph=&#xe944;}"
                                Text="Quit">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="Q"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
            </MenuBarItem>

            <MenuBarItem Title="Playback">
                <MenuFlyoutSubItem IsEnabled="False" Text="Title">
                    <MenuFlyoutItem Text="Content"/>
                </MenuFlyoutSubItem>

                <MenuFlyoutSubItem IsEnabled="False" Text="Chapter">
                    <MenuFlyoutItem Text="Content"/>
                </MenuFlyoutSubItem>

                <MenuFlyoutSubItem IsEnabled="False" Text="Program">
                    <MenuFlyoutItem Text="Content"/>
                </MenuFlyoutSubItem>

                <MenuFlyoutSubItem Text="Custom Bookmarks">
                    <MenuFlyoutItem Text="Manage">
                        <MenuFlyoutItem.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="B"/>
                        </MenuFlyoutItem.KeyboardAccelerators>
                    </MenuFlyoutItem>
                </MenuFlyoutSubItem>

                <MenuFlyoutSeparator/>

                <MenuFlyoutSubItem Text="Renderer">
                    <MenuFlyoutItem IsEnabled="False" Text="Scanning..."/>
                </MenuFlyoutSubItem>

                <MenuFlyoutSeparator/>

                <MenuFlyoutSubItem Text="Speed">
                    <MenuFlyoutItem Text="Faster"/>
                    <MenuFlyoutItem Text="Faster (fine)"/>
                    <MenuFlyoutItem Text="Normal Speed"/>
                    <MenuFlyoutItem Text="Slower (fine)"/>
                    <MenuFlyoutItem Text="Slower"/>
                </MenuFlyoutSubItem>

                <MenuFlyoutSeparator/>

                <MenuFlyoutItem Icon="{toolkit:FontIcon Glyph=&#xed3d;}"
                                Text="Jump Forward"/>

                <MenuFlyoutItem Icon="{toolkit:FontIcon Glyph=&#xed3c;}"
                                Text="Jump Backward"/>

                <MenuFlyoutItem Text="Jump to Specific Time">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="T"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutSeparator/>

                <MenuFlyoutItem Icon="{toolkit:FontIcon Glyph=&#xf5b0;}"
                                Text="Play">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Key="Space"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                
                <MenuFlyoutItem Icon="{toolkit:FontIcon Glyph=&#xee95;}"
                                Text="Stop">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="S"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                
                <MenuFlyoutItem Icon="{toolkit:FontIcon Glyph=&#xf8ac;}"
                                Text="Previous">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="Left"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                
                <MenuFlyoutItem Icon="{toolkit:FontIcon Glyph=&#xf8ad;}"
                                Text="Next">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="Right"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                
                <MenuFlyoutItem Icon="{toolkit:FontIcon Foreground=Red, Glyph=&#xe7c8;}"
                                Text="Record">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="R"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
            </MenuBarItem>

            <MenuBarItem Title="Audio">
                <MenuFlyoutSubItem Text="Audio Track">
                    <MenuFlyoutItem Text="Content"/>
                </MenuFlyoutSubItem>

                <MenuFlyoutSubItem Text="Audio Device">
                    <MenuFlyoutItem Text="Content"/>
                </MenuFlyoutSubItem>

                <MenuFlyoutSubItem Text="Stereo Mode">
                    <MenuFlyoutItem Text="Content"/>
                </MenuFlyoutSubItem>

                <MenuFlyoutSeparator/>

                <MenuFlyoutSubItem Text="Visualizations">
                    <MenuFlyoutItem Text="Content"/>
                </MenuFlyoutSubItem>

                <MenuFlyoutSeparator/>

                <MenuFlyoutItem Icon="{toolkit:FontIcon Glyph=&#xe995;}"
                                Text="Increase Volume"/>

                <MenuFlyoutItem Icon="{toolkit:FontIcon Glyph=&#xe993;}"
                                Text="Decrease Volume"/>

                <MenuFlyoutItem Icon="{toolkit:FontIcon Glyph=&#xe74f;}"
                                Text="Mute"/>
            </MenuBarItem>

            <MenuBarItem Title="Video">
                <MenuFlyoutSubItem IsEnabled="False" Text="Video Track">
                    <MenuFlyoutItem Text="Content"/>
                </MenuFlyoutSubItem>

                <MenuFlyoutSeparator/>

                <MenuFlyoutItem Icon="{toolkit:FontIcon Glyph=&#xe740;}"
                                Text="Fullscreen"/>

                <MenuFlyoutItem IsEnabled="False" Text="Always Fit Window"/>

                <MenuFlyoutItem Icon="{toolkit:FontIcon Glyph=&#xe7b5;}"
                                Text="Set as Wallpaper"/>

                <MenuFlyoutSeparator/>

                <MenuFlyoutSubItem Icon="{toolkit:FontIcon Glyph=&#xe71e;}"
                                   IsEnabled="False"
                                   Text="Zoom">
                    <MenuFlyoutItem Text="Content"/>
                </MenuFlyoutSubItem>

                <MenuFlyoutSubItem Icon="{toolkit:FontIcon Glyph=&#xe799;}"
                                   IsEnabled="False"
                                   Text="Aspect Ratio">
                    <MenuFlyoutItem Text="Content"/>
                </MenuFlyoutSubItem>

                <MenuFlyoutSubItem Icon="{toolkit:FontIcon Glyph=&#xe7a8;}"
                                   IsEnabled="False"
                                   Text="Crop">
                    <MenuFlyoutItem Text="Content"/>
                </MenuFlyoutSubItem>

                <MenuFlyoutSeparator/>

                <MenuFlyoutSubItem IsEnabled="False" Text="Deinterlace">
                    <MenuFlyoutItem Text="Content"/>
                </MenuFlyoutSubItem>

                <MenuFlyoutSubItem IsEnabled="False" Text="Deinterlace mode">
                    <MenuFlyoutItem Text="Content"/>
                </MenuFlyoutSubItem>

                <MenuFlyoutSeparator/>

                <MenuFlyoutItem Icon="{toolkit:FontIcon Glyph=&#xe722;}"
                                IsEnabled="False"
                                Text="Take Snapshot"/>
            </MenuBarItem>

            <MenuBarItem Title="Subtitle">
                <MenuFlyoutItem Icon="{toolkit:FontIcon Glyph=&#xe710;}"
                                Text="Add Subtitle File..."/>

                <MenuFlyoutSubItem Icon="{toolkit:FontIcon Glyph=&#xed1e;}"
                                   IsEnabled="False"
                                   Text="Sub Track">
                    <MenuFlyoutItem Text="Content"/>
                </MenuFlyoutSubItem>
            </MenuBarItem>

            <MenuBarItem Title="Tools">
                <MenuFlyoutItem Icon="{toolkit:FontIcon Glyph=&#xe9e9;}"
                                Text="Effects and Filters">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="E"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutItem Text="Track Synchronization"/>
                
                <MenuFlyoutItem Icon="{toolkit:FontIcon Foreground=CornflowerBlue, Glyph=&#xe946;}"
                                Text="Media Information">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="I"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutItem Icon="{toolkit:FontIcon Foreground=CornflowerBlue, Glyph=&#xe946;}"
                                Text="Codec Information">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="J"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutItem Text="VLM Configuration">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control,Shift" Key="W"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutItem Text="Program Guide"/>

                <MenuFlyoutItem Icon="{toolkit:FontIcon Glyph=&#xe756;}"
                                Text="Messages">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="P"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutItem Text="Plugins and extensions"/>

                <MenuFlyoutSeparator/>

                <MenuFlyoutItem Icon="{toolkit:FontIcon Glyph=&#xe713;}"
                                Text="Customize Interface..."/>

                <MenuFlyoutItem Icon="{toolkit:FontIcon Glyph=&#xe713;}"
                                Text="Preferences">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="P"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
            </MenuBarItem>

            <MenuBarItem Title="View">
                <MenuFlyoutItem Icon="{toolkit:FontIcon Glyph=&#xea37;}"
                                Text="Playlist">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="P"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutItem Text="Docked Playlist"/>

                <MenuFlyoutSubItem Text="Playlist View Mode">
                    <MenuFlyoutItem Text="Content"/>
                </MenuFlyoutSubItem>

                <MenuFlyoutSeparator/>

                <MenuFlyoutItem Text="Always on top"/>

                <MenuFlyoutSeparator/>

                <MenuFlyoutItem Text="Minimal Interface">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="H"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutItem Icon="{toolkit:FontIcon Glyph=&#xe740;}"
                                Text="Fullscreen Interface">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Key="F11"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutItem Text="Advanced Controls"/>

                <MenuFlyoutItem Text="Status Bar"/>

                <MenuFlyoutSeparator/>

                <MenuFlyoutSubItem Text="Add Interface">
                    <MenuFlyoutItem Text="Content"/>
                </MenuFlyoutSubItem>

                <MenuFlyoutSeparator/>

                <MenuFlyoutItem Text="VLsub"/>
            </MenuBarItem>

            <MenuBarItem Title="Help">
                <MenuFlyoutItem Icon="{toolkit:FontIcon Foreground=CornflowerBlue, Glyph=&#xe897;}"
                                Text="Help">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Key="F1"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutItem Text="Check for Updates..."/>

                <MenuFlyoutSeparator/>

                <MenuFlyoutItem Icon="{toolkit:FontIcon Foreground=CornflowerBlue, Glyph=&#xe946;}"
                                Text="About">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Shift" Key="F1"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
            </MenuBarItem>
        </MenuBar>

        <NavigationView x:Name="NavigationView"
                        PaneDisplayMode="Left"
                        OpenPaneLength="180"
                        IsBackButtonVisible="Collapsed"
                        IsPaneToggleButtonVisible="False"
                        IsSettingsVisible="False"
                        Grid.Row="1">
            <NavigationView.MenuItems>
                <NavigationViewItemHeader x:Uid="MainView/NavigationView/LibraryHeader"/>

                <NavigationViewItem x:Uid="MainView/NavigationView/PlaylistItem"
                                    Icon="{toolkit:FontIcon Glyph=&#xe90b;}"/>

                <NavigationViewItemHeader x:Uid="MainView/NavigationView/ThisComputerHeader"/>

                <NavigationViewItem x:Uid="MainView/NavigationView/MusicItem"
                                    Icon="{toolkit:FontIcon Glyph=&#xec4f;}"/>

                <NavigationViewItem x:Uid="MainView/NavigationView/VideosItem"
                                    Icon="{toolkit:FontIcon Glyph=&#xe8b2;}"
                                    IsEnabled="False"/>

                <NavigationViewItem x:Uid="MainView/NavigationView/PicturesItem"
                                    Icon="{toolkit:FontIcon Glyph=&#xe8b9;}"
                                    IsEnabled="False"/>
            </NavigationView.MenuItems>

            <NavigationView.FooterMenuItems>
                <NavigationViewItem>
                    <NavigationViewItem.Template>
                        <ControlTemplate>
                            <ContentPresenter/>
                        </ControlTemplate>
                    </NavigationViewItem.Template>

                    <Grid BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                          BorderThickness="1"
                          CornerRadius="8"
                          Height="128"
                          HorizontalAlignment="Center"
                          Margin="0,16"
                          VerticalAlignment="Center"
                          Width="128">
                        <Grid.Background>
                            <ImageBrush ImageSource="https://www.halopedia.org/images/2/2e/Halo2-Volume1-OriginalSoundtrack.jpg"/>
                        </Grid.Background>

                        <interactivity:Interaction.Behaviors>
                            <interactivity:BehaviorCollection>
                                <interactivity:EventTriggerBehavior EventName="PointerPressed">
                                    <interactivity:InvokeCommandAction Command="{Binding ShowCurrentMediaInformationWindowCommand}"/>
                                </interactivity:EventTriggerBehavior>
                            </interactivity:BehaviorCollection>
                        </interactivity:Interaction.Behaviors>
                    </Grid>
                </NavigationViewItem>
            </NavigationView.FooterMenuItems>
            
            <ContentControl x:Name="ViewContentControl"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch"
                            Grid.Row="1">
                <ContentControl.Transitions>
                    <TransitionCollection>
                        <ContentThemeTransition/>
                    </TransitionCollection>
                </ContentControl.Transitions>
            </ContentControl>
        </NavigationView>

        <Grid BorderBrush="{ThemeResource ControlElevationBorderBrush}"
              BorderThickness="0,1,0,0"
              Grid.Row="2">
            <controls:MediaControlBar/>
        </Grid>
    </Grid>
</UserControl>