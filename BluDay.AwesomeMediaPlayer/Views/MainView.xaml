<?xml version="1.0" encoding="utf-8"?>
<UserControl d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel}"
             mc:Ignorable="d"
             x:Class="BluDay.AwesomeMediaPlayer.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:controls="using:BluDay.AwesomeMediaPlayer.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:toolkit="using:CommunityToolkit.WinUI"
             xmlns:viewModels="using:BluDay.AwesomeMediaPlayer.ViewModels"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <MenuBar>
            <MenuBarItem Title="Media">
                <MenuFlyoutItem Text="Open File...">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="O"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutItem Text="Open Multiple Files...">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control,Shift" Key="O"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutItem Text="Open Folder...">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="F"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutItem Text="Open Disc...">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="D"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutItem Text="Open Network Stream...">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="N"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutItem Text="Open Capture Device...">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="C"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutItem Text="Open Location from clipboard">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="V"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutSubItem Text="Open Recent Media">
                    <MenuFlyoutItem Text="file_0.mp3"/>
                </MenuFlyoutSubItem>
                
                <MenuFlyoutSeparator/>

                <MenuFlyoutItem Text="Save Playlist to File...">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="Y"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutItem Text="Convert / Save...">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="R"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutItem Text="Stream...">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="S"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>

                <MenuFlyoutSeparator/>
                
                <MenuFlyoutItem Text="Quit at the end of playlist"/>

                <MenuFlyoutItem Text="Quit">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Modifiers="Control" Key="Q"/>
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
            </MenuBarItem>

            <MenuBarItem Title="Playback">
                <MenuFlyoutSeparator/>
            </MenuBarItem>

            <MenuBarItem Title="Audio">
                <MenuFlyoutSeparator/>
            </MenuBarItem>

            <MenuBarItem Title="Video">
                <MenuFlyoutSeparator/>
            </MenuBarItem>

            <MenuBarItem Title="Subtitle">
                <MenuFlyoutSeparator/>
            </MenuBarItem>

            <MenuBarItem Title="Tools">
                <MenuFlyoutSeparator/>
            </MenuBarItem>

            <MenuBarItem Title="View">
                <MenuFlyoutSeparator/>
            </MenuBarItem>

            <MenuBarItem Title="Help">
                <MenuFlyoutSeparator/>
            </MenuBarItem>
        </MenuBar>

        <NavigationView x:Name="NavigationView"
                        PaneDisplayMode="Left"
                        OpenPaneLength="180"
                        IsBackButtonVisible="Collapsed"
                        ItemInvoked="NavigationView_ItemInvoked"
                        Grid.Row="1">
            <NavigationView.MenuItems>
                <NavigationViewItemHeader x:Uid="MainView/NavigationView/LibraryHeader"/>

                <NavigationViewItem x:Uid="MainView/NavigationView/PlaylistItem"
                                    Icon="{toolkit:FontIcon Glyph=&#xe90b;}"/>

                <NavigationViewItemHeader x:Uid="MainView/NavigationView/ThisComputerHeader"/>

                <NavigationViewItem x:Uid="MainView/NavigationView/MusicItem"
                                    Icon="{toolkit:FontIcon Glyph=&#xec4f;}"/>

                <NavigationViewItem x:Uid="MainView/NavigationView/VideosItem"
                                    Icon="{toolkit:FontIcon Glyph=&#xe8b2;}"
                                    IsEnabled="False"/>

                <NavigationViewItem x:Uid="MainView/NavigationView/PicturesItem"
                                    Icon="{toolkit:FontIcon Glyph=&#xe8b9;}"
                                    IsEnabled="False"/>
            </NavigationView.MenuItems>

            <NavigationView.FooterMenuItems>
                <NavigationViewItem>
                    <NavigationViewItem.Template>
                        <ControlTemplate>
                            <ContentPresenter Height="140" Margin="0"/>
                        </ControlTemplate>
                    </NavigationViewItem.Template>

                    <Grid BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                          BorderThickness="1"
                          CornerRadius="8"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Height="128"
                          Width="128">
                        <Grid.Background>
                            <ImageBrush ImageSource="https://www.halopedia.org/images/2/2e/Halo2-Volume1-OriginalSoundtrack.jpg"/>
                        </Grid.Background>

                        <interactivity:Interaction.Behaviors>
                            <interactivity:BehaviorCollection>
                                <interactivity:EventTriggerBehavior EventName="PointerPressed">
                                    <interactivity:InvokeCommandAction Command="{Binding ShowCurrentMediaInformationWindowCommand}"/>
                                </interactivity:EventTriggerBehavior>
                            </interactivity:BehaviorCollection>
                        </interactivity:Interaction.Behaviors>
                    </Grid>
                </NavigationViewItem>
            </NavigationView.FooterMenuItems>
            
            <ContentControl x:Name="ViewContentControl"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch"
                            Grid.Row="1">
                <ContentControl.Transitions>
                    <TransitionCollection>
                        <ContentThemeTransition/>
                    </TransitionCollection>
                </ContentControl.Transitions>
            </ContentControl>
        </NavigationView>

        <Grid BorderBrush="{ThemeResource ControlElevationBorderBrush}"
              BorderThickness="0,1,0,0"
              Grid.Row="2">
            <controls:MediaControlBar/>
        </Grid>
    </Grid>
</UserControl>