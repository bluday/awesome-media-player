<?xml version="1.0" encoding="utf-8" ?>
<UserControl mc:Ignorable="d"
             x:Class="AwesomeMediaPlayer.Controls.SquareMediaCoverArtButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             CornerRadius="8"
             Height="160"
             Width="160">
    <!--
        ButtonBackground            (ControlFillColorDefaultBrush (ControlFillColorDefault))     -> #0FFFFFFF
        ButtonBackgroundPointerOver (ControlFillColorSecondaryBrush (ControlFillColorSecondary)) -> #15FFFFFF
        ButtonBackgroundPressed     (ControlFillColorTertiaryBrush (ControlFillColorTertiary))   -> #08FFFFFF
        ButtonBackgroundDisabled    (ControlFillColorDisabledBrush (ControlFillColorDisabled))   -> #0BFFFFFF
    -->

    <Button CornerRadius="{x:Bind CornerRadius}"
            Height="{x:Bind Height}"
            Width="{x:Bind Width}">
        <Button.Background>
            <ImageBrush ImageSource="https://www.halopedia.org/images/2/2e/Halo2-Volume1-OriginalSoundtrack.jpg"/>
        </Button.Background>
    </Button>
</UserControl>