<?xml version="1.0" encoding="utf-8" ?>
<UserControl d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel}"
             mc:Ignorable="d"
             x:Class="AwesomeMediaPlayer.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:controls="using:AwesomeMediaPlayer.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:toolkit="using:CommunityToolkit.WinUI"
             xmlns:toolkitControls="using:CommunityToolkit.WinUI.Controls"
             xmlns:views="using:AwesomeMediaPlayer.Views"
             xmlns:viewModels="using:AwesomeMediaPlayer.ViewModels"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid IsTabStop="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <controls:TitleBar Icon="{Binding TitleBarIcon}"
                           Title="{Binding Title}"
                           Grid.Row="0"/>

        <controls:MenuBar OpenAboutWindowCommand="{Binding OpenAboutWindowCommand}"
                          OpenHelpWindowCommand="{Binding OpenHelpWindowCommand}"
                          OpenPreferencesWindowCommand="{Binding OpenPreferencesWindowCommand}"
                          QuitCommand="{Binding CloseWindowCommand}"
                          Grid.Row="1"/>

        <controls:NavigationViewHeaderBar Grid.Row="2"/>

        <NavigationView x:Name="NavigationView"
                        IsBackButtonVisible="Collapsed"
                        IsPaneToggleButtonVisible="False"
                        IsSettingsVisible="False"
                        OpenPaneLength="200"
                        PaneDisplayMode="Left"
                        Grid.Row="3">
            <NavigationView.Content>
                <Grid>
                    <views:MediaLibraryView DataContext="{Binding MediaLibraryViewModel}"/>

                    <toolkitControls:PropertySizer Binding="{x:Bind NavigationView.OpenPaneLength, Mode=TwoWay}"
                                                   HorizontalAlignment="Left"
                                                   Maximum="400"
                                                   Minimum="200"/>
                </Grid>
            </NavigationView.Content>

            <NavigationView.FooterMenuItems>
                <NavigationViewItem>
                    <NavigationViewItem.Template>
                        <ControlTemplate>
                            <ContentPresenter Height="140"/>
                        </ControlTemplate>
                    </NavigationViewItem.Template>

                    <Grid BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                          BorderThickness="1"
                          CornerRadius="8"
                          Height="120"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Width="120">
                        <Grid.Background>
                            <ImageBrush ImageSource="https://www.halopedia.org/images/2/2e/Halo2-Volume1-OriginalSoundtrack.jpg"/>
                        </Grid.Background>

                        <interactivity:Interaction.Behaviors>
                            <interactivity:BehaviorCollection>
                                <interactivity:EventTriggerBehavior EventName="Tapped">
                                    <interactivity:InvokeCommandAction Command="{Binding OpenCurrentMediaInformationWindowCommand}"/>
                                </interactivity:EventTriggerBehavior>
                            </interactivity:BehaviorCollection>
                        </interactivity:Interaction.Behaviors>
                    </Grid>
                </NavigationViewItem>
            </NavigationView.FooterMenuItems>

            <NavigationView.MenuItems>
                <NavigationViewItem Content="Playlist [00:00]" IsSelected="True">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xe90b;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem Content="Media Library" IsEnabled="False">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xe8f1;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItemSeparator/>

                <NavigationViewItem Content="My Computer"
                                    IsExpanded="True"
                                    SelectsOnInvoked="False">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xe977;"/>
                    </NavigationViewItem.Icon>

                    <NavigationViewItem.MenuItems>
                        <NavigationViewItem Content="My Videos">
                            <NavigationViewItem.Icon>
                                <FontIcon Glyph="&#xe8b2;"/>
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>

                        <NavigationViewItem Content="My Music">
                            <NavigationViewItem.Icon>
                                <FontIcon Glyph="&#xe8d6;"/>
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>

                        <NavigationViewItem Content="My Pictures">
                            <NavigationViewItem.Icon>
                                <FontIcon Glyph="&#xe8b9;"/>
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>
                    </NavigationViewItem.MenuItems>
                </NavigationViewItem>

                <NavigationViewItem Content="Devices"
                                    IsExpanded="False"
                                    SelectsOnInvoked="False">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xe772;"/>
                    </NavigationViewItem.Icon>

                    <NavigationViewItem.MenuItems>
                        <NavigationViewItem Content="Discs" IsEnabled="False">
                            <NavigationViewItem.Icon>
                                <FontIcon Glyph="&#xe958;"/>
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>
                    </NavigationViewItem.MenuItems>
                </NavigationViewItem>

                <NavigationViewItem Content="Local Network"
                                    IsExpanded="False"
                                    SelectsOnInvoked="False">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xec27;"/>
                    </NavigationViewItem.Icon>

                    <NavigationViewItem.MenuItems>
                        <NavigationViewItem Content="mDNS Network Discovery" IsEnabled="False">
                            <NavigationViewItem.Icon>
                                <FontIcon Glyph="&#xe968;"/>
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>

                        <NavigationViewItem Content="Network streams (SAP)" IsEnabled="False">
                            <NavigationViewItem.Icon>
                                <FontIcon Glyph="&#xe968;"/>
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>

                        <NavigationViewItem Content="Universal Plug'n'Play" IsEnabled="False">
                            <NavigationViewItem.Icon>
                                <FontIcon Glyph="&#xe968;"/>
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>
                    </NavigationViewItem.MenuItems>
                </NavigationViewItem>

                <NavigationViewItem Content="Internet"
                                    IsExpanded="False"
                                    SelectsOnInvoked="False">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xe774;"/>
                    </NavigationViewItem.Icon>

                    <NavigationViewItem.MenuItems>
                        <NavigationViewItem Content="Podcasts" IsEnabled="False">
                            <NavigationViewItem.Icon>
                                <FontIcon Glyph="&#xe704;"/>
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>

                        <NavigationViewItem Content="Jamendo Selections" IsEnabled="False">
                            <NavigationViewItem.Icon>
                                <FontIcon Glyph="&#xe704;"/>
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>

                        <NavigationViewItem Content="Icecast Radio Directory" IsEnabled="False">
                            <NavigationViewItem.Icon>
                                <FontIcon Glyph="&#xe704;"/>
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>
                    </NavigationViewItem.MenuItems>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <NavigationView.Resources>
                <Style TargetType="FontIcon">
                    <Setter Property="Foreground" Value="{ThemeResource SystemAccentColorLight1}"/>
                </Style>
            </NavigationView.Resources>
        </NavigationView>

        <controls:MediaControlBar BorderThickness="0,1,0,0"
                                  CornerDragHandleVisibility="Visible"
                                  Grid.Row="4"/>
    </Grid>
</UserControl>