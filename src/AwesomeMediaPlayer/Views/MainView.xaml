<?xml version="1.0" encoding="utf-8" ?>
<UserControl x:Class="AwesomeMediaPlayer.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:communityToolkit="using:CommunityToolkit.WinUI"
             xmlns:communityToolkitControls="using:CommunityToolkit.WinUI.Controls"
             xmlns:controls="using:AwesomeMediaPlayer.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="using:AwesomeMediaPlayer.Views"
             xmlns:viewModels="using:AwesomeMediaPlayer.Data.ViewModels"
             xmlns:xamlInteractivity="using:Microsoft.Xaml.Interactivity"
             d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel}"
             mc:Ignorable="d">
    <Grid IsTabStop="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <controls:MenuBar Grid.Row="1"
                          OpenAboutWindowCommand="{Binding OpenAboutWindowCommand}"
                          OpenHelpWindowCommand="{Binding OpenHelpWindowCommand}"
                          OpenPreferencesWindowCommand="{Binding OpenPreferencesWindowCommand}"
                          QuitCommand="{Binding CloseWindowCommand}"/>

        <controls:NavigationViewHeaderBar Grid.Row="2" Padding="0,4"/>

        <NavigationView x:Name="NavigationView"
                        Grid.Row="3"
                        IsBackButtonVisible="Collapsed"
                        IsPaneToggleButtonVisible="False"
                        IsSettingsVisible="False"
                        OpenPaneLength="200"
                        PaneDisplayMode="Left">
            <NavigationView.Content>
                <Grid>
                    <views:MediaLibraryView DataContext="{Binding MediaLibraryViewModel}"/>

                    <!--
                    <controls:SquareMediaCoverArtButton HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    -->

                    <communityToolkitControls:PropertySizer HorizontalAlignment="Left"
                                                            Binding="{x:Bind NavigationView.OpenPaneLength, Mode=TwoWay}"
                                                            Maximum="400"
                                                            Minimum="200"/>
                </Grid>
            </NavigationView.Content>

