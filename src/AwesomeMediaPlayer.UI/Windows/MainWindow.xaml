<?xml version="1.0" encoding="utf-8" ?>
<Window x:Class="AwesomeMediaPlayer.UI.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:AwesomeMediaPlayer.UI.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="using:AwesomeMediaPlayer.UI.Views"
        x:DefaultBindMode="OneWay"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <controls:TitleBar Title="{x:Bind ViewModel.TitleBar.Title}"
                           Grid.Row="0"
                           Icon="{x:Bind ViewModel.TitleBar.IconUri.AbsolutePath}"/>

        <views:MainView Grid.Row="1"/>
    </Grid>
</Window>