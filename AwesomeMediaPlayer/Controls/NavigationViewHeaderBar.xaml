<?xml version="1.0" encoding="utf-8" ?>
<UserControl mc:Ignorable="d"
             x:Class="AwesomeMediaPlayer.Controls.NavigationViewHeaderBar"
             x:DefaultBindMode="OneWay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:communityToolkit="using:CommunityToolkit.WinUI"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Padding="{x:Bind Padding}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock FontWeight="SemiBold"
                   Margin="12,6"
                   MaxLines="1"
                   Text="My Music"
                   TextLineBounds="Tight"
                   TextTrimming="CharacterEllipsis"
                   TextWrapping="NoWrap"
                   VerticalAlignment="Bottom"/>

        <Grid HorizontalAlignment="Right"
              VerticalAlignment="Bottom"
              Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Content="{communityToolkit:FontIcon FontSize=17,
                                                        Glyph=&#xe9a4;}"
                    Height="24"
                    Padding="0"
                    VerticalAlignment="Bottom"
                    Width="24"
                    Grid.Column="0"/>

            <AutoSuggestBox Margin="4,0"
                            MinWidth="200"
                            PlaceholderText="Search"
                            VerticalAlignment="Bottom"
                            Grid.Column="1"/>
        </Grid>
    </Grid>
</UserControl>